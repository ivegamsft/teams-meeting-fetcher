# Teams Meeting Fetcher - Development Environment Configuration
#
# Copy this to .env.development.local for local development
# This file overrides .env.example with development-friendly values
#

# Development mode
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Use local SQLite database
DATABASE_PATH=./data/meetings-dev.db
DATABASE_ENGINE=sqlite

# Use shorter polling intervals for testing
TRANSCRIPTION_POLL_INTERVAL_MS=10000  # 10 seconds (vs 30 for prod)
TRANSCRIPTION_MAX_RETRIES=10           # ~100 seconds total

# More frequent membership checks for testing
GROUP_MEMBERSHIP_CHECK_INTERVAL_MS=300000  # 5 minutes (vs 24 hours)

# Disable HTTPS for local development (use ngrok or localhost)
HTTPS_ENABLED=false

# Verbose logging to files
LOG_FORMAT=text
LOG_FILE_PATH=./logs/development.log

# Development features
SKIP_GRAPH_AUTH_VALIDATION=false  # Set to true to mock Graph calls
ENABLE_MOCK_WEBHOOKS=false        # Set to true to use mock webhook data

# Local webhook endpoint (use ngrok for HTTPS tunnel)
# Example: WEBHOOK_URL=https://random.ngrok.io/api/webhooks/graph

# Disable remote services in development
SLACK_NOTIFICATIONS_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=false
SENTRY_ENABLED=false
APPINSIGHTS_ENABLED=false

# Development API keys (use test tenants/groups if possible)
# These should be from a test Entra tenant, not production
GRAPH_TENANT_ID=00000000-0000-0000-0000-000000000000
GRAPH_CLIENT_ID=00000000-0000-0000-0000-000000000000
GRAPH_CLIENT_SECRET=<REPLACE_ME>

# Test group ID (use a test group, not a production group)
ENTRA_GROUP_ID=00000000-0000-0000-0000-000000000000

# Use a simple test secret (not production)
WEBHOOK_AUTH_SECRET=<REPLACE_ME>

# Disable Event Grid in local development (optional)
EVENTGRID_ENABLED=false
